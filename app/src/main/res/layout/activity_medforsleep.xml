<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".medforsleep">
    <ScrollView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
    <TextView
        android:id="@+id/txtSleepHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meditation for Sleep"
        android:layout_marginHorizontal="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="37dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/imgSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/medforsleep"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtSleepHead"/>
    <TextView
        android:id="@+id/txtSleepText"
        android:layout_below="@+id/imgSleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A slow meditation session to put you to Sleep"
        android:textAlignment="center"
        android:textColor="#CA5A5A"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/countdown_text"
        android:layout_below="@+id/txtSleepText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        tools:text="20:00"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/countdown_button"
        android:layout_below="@+id/countdown_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txtSleepIns"
        android:layout_below="@id/countdown_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "@string/sleep_instructions"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="22sp"
        android:textColor="@color/black"
        />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>