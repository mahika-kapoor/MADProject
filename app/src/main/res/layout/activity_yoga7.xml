<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pinkish"
    android:orientation="vertical"
    tools:context=".Yoga1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:text="The Crossbow Pose"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="30sp"/>

            <ImageView
                android:layout_width="278dp"
                android:layout_height="252dp"
                android:layout_gravity="center"
                android:src="@drawable/yoga7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                android:layout_marginLeft="15sp"/>

            <TextView
                android:layout_width="343dp"
                android:layout_height="209dp"
                android:layout_marginLeft="15sp"
                android:text="1.Lie on your belly with your hands alongside your torso, palms up.
                \n2.Exhale and bend your knees, bringing your heels as close as you can to your buttocks.
                \n3.Reach back with your hands and take hold of your ankles.
                \n4.Make sure your knees arenâ€™t wider than the width of your hips, and keep your knees hip width for the duration of the pose.
                \n5.Inhale and strongly lift your heels away from your buttocks and, at the same time, lift your thighs away from the floor.
                \n6.Stay in this pose anywhere from 20 to 30 seconds. "
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benefits"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:layout_marginLeft="15sp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="348dp"
                android:layout_height="111dp"
                android:text="1.Bow pose opens your shoulders from the front of the body.
            \n2.Relieves tightness and reducing slouching. \n3.Strengthens spine and hamstrings. \n4.Strengthens your spine extensors and hamstrings,
            preventing or reducing lower back pain and injury"
                android:textSize="20sp"
                android:layout_marginLeft="15sp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>